<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    tools:showIn="@layout/activity_ping_tool">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/item_ping_result_right_container">

        <TextView
            android:id="@+id/item_ping_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="PING:" />

        <TextView
            android:id="@+id/item_ping_result_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_ping_result_title"
            tools:text="ping Result" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_ping_result_right_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/item_ping_result_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="SUCCESS" />
    </RelativeLayout>
</RelativeLayout>